-- Tạo ScreenGui và khung chính
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CustomUI"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 600)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -300)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.Parent = screenGui

-- Tạo tiêu đề chính
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
title.Text = "Sitink Hub"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextScaled = true
title.Font = Enum.Font.SourceSansBold
title.Parent = mainFrame

-- Tạo menu bên trái
local menuFrame = Instance.new("Frame")
menuFrame.Size = UDim2.new(0, 100, 1, -50)
menuFrame.Position = UDim2.new(0, 0, 0, 50)
menuFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
menuFrame.Parent = mainFrame

local function createMenuButton(text, position)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0, 50)
    button.Position = position
    button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    button.Text = text
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextScaled = true
    button.Font = Enum.Font.SourceSansBold
    button.Parent = menuFrame
    return button
end

local homeButton = createMenuButton("Home", UDim2.new(0, 0, 0, 0))
local farmButton = createMenuButton("Stack Farm", UDim2.new(0, 0, 0, 50))

-- Tạo các phần tử giao diện
local function createLabel(parent, text, position)
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -100, 0, 40)
    label.Position = position
    label.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextScaled = true
    label.Font = Enum.Font.SourceSans
    label.Parent = parent
end

local function createToggleButton(parent, text, position)
    local toggleButton = Instance.new("TextButton")
    toggleButton.Size = UDim2.new(1, -100, 0, 40)
    toggleButton.Position = position
    toggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    toggleButton.Text = text
    toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggleButton.TextScaled = true
    toggleButton.Font = Enum.Font.SourceSans
    toggleButton.Parent = parent

    local toggled = false
    toggleButton.MouseButton1Click:Connect(function()
        toggled = not toggled
        if toggled then
            toggleButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
        else
            toggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        end
    end)
end

local function createDropdown(parent, text, position)
    local dropdown = Instance.new("TextButton")
    dropdown.Size = UDim2.new(1, -100, 0, 40)
    dropdown.Position = position
    dropdown.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    dropdown.Text = text
    dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
    dropdown.TextScaled = true
    dropdown.Font = Enum.Font.SourceSans
    dropdown.Parent = parent

    local items = {"One", "Two", "Three"}
    local dropdownMenu = Instance.new("Frame")
    dropdownMenu.Size = UDim2.new(1, 0, 0, #items * 30)
    dropdownMenu.Position = UDim2.new(0, 0, 1, 0)
    dropdownMenu.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    dropdownMenu.Visible = false
    dropdownMenu.Parent = dropdown

    for i, item in ipairs(items) do
        local itemButton = Instance.new("TextButton")
        itemButton.Size = UDim2.new(1, 0, 0, 30)
        itemButton.Position = UDim2.new(0, 0, 0, (i-1) * 30)
        itemButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        itemButton.Text = item
        itemButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        itemButton.TextScaled = true
        itemButton.Font = Enum.Font.SourceSans
        itemButton.Parent = dropdownMenu
        itemButton.MouseButton1Click:Connect(function()
            dropdown.Text = item
            dropdownMenu.Visible = false
        end)
    end

    dropdown.MouseButton1Click:Connect(function()
        dropdownMenu.Visible = not dropdownMenu.Visible
    end)
end

local function createSlider(parent, text, position)
    local sliderFrame = Instance.new("Frame")
    sliderFrame.Size = UDim2.new(1, -100, 0, 40)
    sliderFrame.Position = position
    sliderFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    sliderFrame.Parent = parent

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.3, 0, 1, 0)
    label.Position = UDim2.new(0, 0, 0, 0)
    label.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextScaled = true
    label.Font = Enum.Font.SourceSans
    label.Parent = sliderFrame

    local slider = Instance.new("TextButton")
    slider.Size = UDim2.new(0.1, 0, 1, 0)
    slider.Position = UDim2.new(0.35, 0, 0, 0)
    slider.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    slider.Text = ""
    slider.Parent = sliderFrame

    local uis = game:GetService("UserInputService")
    local dragging = false

    slider.MouseButton1Down:Connect(function()
        dragging = true
    end)

    uis.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    uis.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local x = math.clamp(input.Position.X - sliderFrame.AbsolutePosition.X, 0, sliderFrame.AbsoluteSize.X - slider.AbsoluteSize.X)
            slider.Position = UDim2.new(0, x, 0, 0)
        end
    end)
end

-- Tạo các phần tử giao diện trong mainFrame
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, -100, 1, -50)
contentFrame.Position = UDim2.new(0, 100, 0, 50)
contentFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
contentFrame.Parent = mainFrame

createLabel(contentFrame, "Redeem All Codes", UDim2.new(0, 0, 0, 10))
createToggleButton(contentFrame, "Auto Farm", UDim2.new(0, 0, 0, 60))
createDropdown(contentFrame, "Select Option", UDim2.new(0, 0, 0, 110
